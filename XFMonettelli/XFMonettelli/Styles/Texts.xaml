        <On Platform="Android" Value="FontsFamily/OpenSans-Italic.ttf#Open Sans" />
        <On Platform="iOS" Value="OpenSans-Italic" />
        <On Platform="UWP" Value="/Assets/Fonts/FontsFamily/OpenSans-Italic.ttf#Open Sans" />
    </OnPlatform>
    <!--#endregion-->

    <!--#region Light-->
    <OnPlatform x:Key="LightFont_OpenSans" x:TypeArguments="x:String">
        <On Platform="Android" Value="FontsFamily/OpenSans-Light.ttf#Open Sans" />
        <On Platform="iOS" Value="OpenSans-Light" />
        <On Platform="UWP" Value="/Assets/FontsFamily/OpenSans-Light.ttf#Open Sans" />
